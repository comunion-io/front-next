{
  "name": "front-next",
  "version": "0.0.0",
  "description": "Comunion frontend packages",
  "keywords": [
    "comunion"
  ],
  "repository": "comunion-io/front-next",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "test": "a(){ echo $2 $1; };a",
    "addp": "a(){ cd packages/$1 && pnpm add $3 $2 && cd ../; };a",
    "runp": "a(){ cd packages/$1 && npm run $2 && cd ../; };a",
    "gen:component": "a(){ cd packages/generator && npm run gen:component $1 && cd ../; };a",
    "postinstall": "husky install",
    "stylint": "stylelint \"src/**/*.{css,less,scss,sass,styl}\" --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "devmoji": "^2.2.0",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}